---
import BaseLayout, { type Meta } from "./Base.astro"
import Header from "../components/Header.astro"

export interface Props {
  title: string
  description: string
  metas?: Meta[]
}
---
<BaseLayout title={Astro.props.title} description={Astro.props.description} metas={Astro.props.metas || []}>
  <Header />
  <slot />
</BaseLayout>